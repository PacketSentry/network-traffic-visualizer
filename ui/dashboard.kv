#:import TrafficGraph ui.widgets.TrafficGraph
#:import AppDashboard ui.widgets.AppDashboard

BoxLayout:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    # 1. The Title
    Label:
        text: "NetSentry: Live Traffic Monitor"
        font_size: 24
        size_hint_y: None   # Fixed height
        height: 50
        bold: True
        color: 0, 1, 0, 1

    # 2. The Graph (Takes 40% of screen)
    TrafficGraph:
        id: main_graph
        size_hint_y: 0.4

    # 3. The App List (Takes remaining 60% of screen)
    AppDashboard:
        id: dashboard
        size_hint_y: 0.6